/*
Random Dice Roller
*/

#include <iostream>

int main() {
  using namespace std;

    cout << "How many dice would you like to roll? \n";
    int dice; 
    cin >> dice; 

    int sides;
    cout << "How many sides would you like the dice to have? \n";
    cin >> sides; 

    int aot;
    cout << "How many times would you like to roll the dice? \n";
    cin >> aot;

  for (int i=0; i!=aot; i++) {

    for (int h=0; h!=dice; h++) {
      auto r=rand() % sides + 1;
      cout << r;
      cout << " ";
      }

    int h=0;
    cout << "\n";

    }
return 0;
}
